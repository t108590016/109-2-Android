<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/donut_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:onClick="lauchDonutCircle"
        app:srcCompat="@drawable/donut_circle"
        tools:layout_editor_absoluteY="138dp" />

    <ImageView
        android:id="@+id/froyo_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toEndOf="@+id/donut_circle"
        app:srcCompat="@drawable/froyo_circle"
        android:onClick="lauchFroyoCircle"
        tools:layout_editor_absoluteY="138dp" />

    <ImageView
        android:id="@+id/icecream_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"

        app:layout_constraintStart_toEndOf="@+id/froyo_circle"
        android:onClick="lauchIcecreamCircle"
        app:srcCompat="@drawable/icecream_circle"
        tools:layout_editor_absoluteY="138dp" />

</androidx.constraintlayout.widget.ConstraintLayout>